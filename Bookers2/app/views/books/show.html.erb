<body>
	<div class="body">
		<div class="user_menu">
			<h2>User info</h2>
				<table>
					<tbody>
					<tr>
						<th>name</th>
						<th><%= user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %><%= link_to 'edit' %><% end %>

			<h2>New Book</h2>
				<%= form_for(@book) do |f| %>
			<label for="book_title">Title</label><br>
				<%= f.text_field :title %><br>
			<label for="book_title">Opinion</label><br>
			<%= f.text_area :body %><br>
			<%= f.submit 'create book' %><% end %>
		</div>

		<h2>Books</h2>
			<table>
				<tbody>
					<tr>
						<td>画像<br>
							<%= @book.user.name %></td>
						<td><%= link_to book.title %></td>
						<td><%= book.body %></td>
						<% if @user.id == current_user.id %>
							<td><%= link_to 'edit', book_path(@book_path) %></td>
							<td><%= link_to 'destroy', book_path(@book_path), method: :delete %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
	</div>


</body>