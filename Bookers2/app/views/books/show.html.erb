<body>
	<div class="body">
		<div class="container">
			<p><%= notice %></p>
			<div class="row">
				<div class="col-xs-3">
					<h2>User info</h2>
					<%= attachment_image_tag @books.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" %>
					<table class="table">
						<tbody>
							<tr>
								<th>name</th>
								<th><%= @books.user.name%></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= @books.user.introduction %></th>
							</tr>
						</tbody>
					</table>
					<div class="row">
						<% if @books.user.id == current_user.id %>
						<%= link_to edit_user_path(current_user) do %>
							<div class="col-xs-12 btn btn-default">
								<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
							</div>
						<% end %>
						<% end %>
					</div>


					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
					<label for="book_title">Title</label><br>
					<%= f.text_field :title %><br>
					<label for="book_title">Opinion</label><br>
					<%= f.text_area :body %><br>
					<%= f.submit 'Create Book' %><% end %>
				</div>

				<div class="col-xs-9">
					<h2>Book detail</h2>
					<table class="table table-hover table-inverse">
						<tbody>
							<tr>
								<td>
									<%= link_to user_path(@books.user) do %>
									<%= attachment_image_tag @books.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><br>
									<%= @books.user.name %>
									<% end %>
								</td>
								<td><%= link_to @books.title %></td>
								<td><%= @books.body %></td>
								<% if @books.user.id == current_user.id %>
								<td><%= link_to 'Edit', edit_book_path(@books) %></td>
								<td><%= link_to 'Destroy', book_path(@books), method: :delete %></td>
								<% end %>
							</tr>
						</tbody>
					</table>
				</div>
			</div>

</body>