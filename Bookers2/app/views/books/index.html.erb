<!--ブック一覧-->
<body>
	<div class="body">
		<div class="user_menu">
			<h2>User info</h2>
				<table>
					<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %><%= link_to 'edit' %><% end %>

			<h2>New Book</h2>
				<%= form_for(@book) do |f| %>
			<label for="book_title">Title</label><br>
				<%= f.text_field :title %><br>
			<label for="book_title">Opinion</label><br>
			<%= f.text_area :body %><br>
			<%= f.submit 'create book' %><% end %>
		</div>



		<div class="lists">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>画像</td>
						<td><%= link_to book.title, book_path(:id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>