<!--ブック一覧-->
<body>
	<div class="body">

		<% if @book.errors.any? %>
			<div id="error_explanation" class="alert alert-danger">
			<h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
			<ul>
    			<% @book.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
			</div>
		<% end %>


		<div class="user_menu">
			<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
				<table>
					<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
					</tbody>
				</table>
				<%= link_to 'edit', edit_user_path(current_user) %>

			<h2>New book</h2>
				<%= form_for(@book) do |f| %>
					<label for="book_title">Title</label><br>
					<%= f.text_field :title %><br>
					<label for="book_title">Opinion</label><br>
					<%= f.text_area :body %><br>
					<%= f.submit 'Create Book' %>
				<% end %>
		</div>



		<div class="lists">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>