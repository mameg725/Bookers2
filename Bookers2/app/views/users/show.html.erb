<body>
	<div class="body">
		<p><%= notice %></p>
		<div class="user_menu">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
			<table>
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name%></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %><%= link_to 'edit', edit_user_path %><% end %>


			<h2>New book</h2>
				<%= form_for(@book) do |f| %>
			<label for="book_title">Title</label><br>
				<%= f.text_field :title %><br>
			<label for="book_title">Opinion</label><br>
			<%= f.text_area :body %><br>
			<%= f.submit 'Create Book' %><% end %>
		</div>


		<div class="lists">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<% @user.books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>