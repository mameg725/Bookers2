<body>
	<div class="body">
		<div class="user_menu">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			<table>
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name%></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %><%= link_to 'edit', edit_user_path(current_user) %><% end %>


			<h2>New Book</h2>
			<%= form_for(@book) do |f| %>
				<label for="book_title">Title</label>
				<%= f.text_field :title %>
				<label for="book_title">Opinion</label>
				<%= f.text_area :body %>
				<%= f.submit 'create book' %>
			<% end %>
		</div>


		<div class="lists">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<% @user.books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>