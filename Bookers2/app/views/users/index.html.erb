<!--ユーザー一覧-->
<body>
	<div class="body">
		<div class="user_menu">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
				<table>
					<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<%= link_to 'edit', edit_user_path(current_user) %>


			<h2>New Book</h2>
				<%= form_for(@book) do |f| %>
			<label for="book_title">Title</label><br>
				<%= f.text_field :title %><br>
			<label for="book_title">Opinion</label><br>
			<%= f.text_area :body %><br>
			<%= f.submit 'create book' %><% end %>
		</div>



		<div class="lists">
			<h2>Users</h2>
			<table>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>