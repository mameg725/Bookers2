<!--ユーザー一覧-->
<body>
	<div class="body">
		<div class="user_menu">
			<h2>User info</h2>

				<table>
					<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %><%= link_to 'edit' %><% end %>


			<h2>New Book</h2>
				<%= form_for(@book) do |f| %>
			<label for="book_title">Title</label><br>
				<%= f.text_field :title %><br>
			<label for="book_title">Opinion</label><br>
			<%= f.text_area :body %><br>
			<%= f.submit 'create book' %><% end %>
		</div>



		<div class="lists">
			<h2>Users</h2>
			<table>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td>プロフ画像</td>
						<td><%= user.name %></td>
						<td><%= link_to "Show" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>