<body>
	<div class="body">
		<div class="container">
			<% if @user.errors.any? %>
				<div id="error_explanation" class="alert alert-danger">
					<h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
					<ul>
    					<% @user.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<h2>User info</h2>
			<p><%= notice %></p>
			<%= form_for(@user) do |f| %>
				<div class="field">
					<label for="book_title">Name</label><br>
					<%= f.text_field :name %><br>
				</div>
				<div class="field">
					<label for="book_title">Image</label><br>
					<%= f.attachment_field :profile_image %><br>
				</div>
				<div class="field">
					<label for="book_title">Introduction</label><br>
					<%= f.text_area :introduction %><br>
				</div>
				<div class="actions">
					<%= f.submit 'Update User' %>
			<% end %>
		</div>
	</div>
</body>